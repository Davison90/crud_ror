<h1>Litado de Productos</h1>
<table>
  <tr>
    <thead>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </thead>
  </tr>
  <% @products.each do |product|%> 
    <tr>
      <td><%= product.name%></td>
      <td><%= product.description%></td>
      <td><%= product.price%></td>
      <td>
        <%= link_to "Mostrar", product_path(product)%>
        <%= link_to "Editar", edit_product_path(product)%>
        <%= link_to "Eliminar"%>
      </td>
    </tr>
  <% end%>
</table>